# Copy this file to .env and fill values before running the app
# MongoDB connection string (local or Atlas). Example local:
# MONGO_URI=mongodb://127.0.0.1:27017/wishing-you
MONGO_URI=

# Port the server will listen on (optional)
PORT=5000

# Email account credentials for nodemailer (optional for local dev)
# For Gmail you may need an App Password or enable less secure access
EMAIL_USER=
EMAIL_PASS=

# Public client URL used in transactional emails
CLIENT_URL=http://localhost:5000

# Secret for signing JWTs (change for production)
JWT_SECRET=
